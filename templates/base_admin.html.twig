<!doctype html>
<html lang="en">
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <!-- Icons Bootstrap -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">

        <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.3/css/dataTables.bootstrap5.min.css"> 

        <script type="text/javascript" language="javascript" src="https://code.jquery.com/jquery-3.5.1.js"></script>

        <script type="text/javascript" language="javascript" src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>

        <script type="text/javascript" language="javascript" src="https://cdn.datatables.net/1.11.3/js/dataTables.bootstrap5.min.js"></script>

        <script src=" {{ asset('js/dataTable.js') }} "></script>

         <style>
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            user-select: none;
        }
        i{
            font-size: 20px !important;
            
        }
      

        .icone-logo{
            font-size: 32px !important;
        }

        @media (min-width: 768px) {
            .bd-placeholder-img-lg {
            font-size: 3.5rem;
        }
      }
    </style>

        {% block stylsheets %}
        
        {% endblock %}

    
        <!-- Custom styles for this template -->
        <link href="{{ asset('css/admin.css') }}" rel="stylesheet">

        <title>
            {% block title %}
                BolSymfony | BackOffice
            {% endblock %}
        </title>
    </head>
    <body>

    <main class="d-flex">
    <div class="d-flex flex-column flex-shrink-0 p-3 text-white bg-dark position-fixed h-100" style="width: 20%;">
        <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
        <svg class="bi me-2" width="40" height="32"><use xlink:href="#bootstrap"/></svg>
        <i class="bi bi-apple"></i>&nbsp;<span class="fs-4">BACKOFFICE</span>
        </a>
        <hr>
        {# renvoi le nom de la route définit dans le controller #}
        {# {{ dump(app.request.attributes.get('_route')) }} #}
        {#  on stock le nom de la route dans une variable twig #}
        {% set route_name = app.request.attributes.get('_route') %}
        
        <ul class="nav nav-pills flex-column mb-auto">
        <li class="nav-item">

            <a href="{{ path('app_admin') }}" class="nav-link text-white {% if route_name == 'app_admin' %} active {% endif %}" aria-current="page">
            <i class="bi bi-house-door icon-logo"></i>
            Home
            </a>
        </li>
        <li>
            <a href="{{ path('app_admin_article_add') }}" class="nav-link text-white {% if route_name == 'app_admin_article_add' %} active {% endif %} {% if route_name == 'admin_edit' %} active {% endif %}">
            <i class="bi bi-file-earmark-plus icon-logo"></i>
            Nouvel article
            </a>
        </li>
        <li>
            <a href="{{ path('app_admin_articles') }}" class="nav-link text-white {% if route_name == 'app_admin_articles' %} active {% endif %}">
            <i class="bi bi-newspaper icon-logo"></i>
            Articles
            </a>
        </li>
        <li>
            <a href="{{ path('app_admin_categorie_add') }}" class="nav-link text-white {% if route_name == 'app_admin_categorie_add' %} active {% endif %} {% if route_name == 'app_admin_categorie_update' %} active {% endif %}">
            <i class="bi bi-bookmark-plus"></i>
            Nouvel catégorie
            </a>
        </li>
        <li>
            <a href="{{ path('app_admin_categorie') }}" class="nav-link text-white {% if route_name == 'app_admin_categorie' %} active {% endif %}">
            <i class="bi bi-bookmarks-fill icon-logo"></i>
            Catégories
            </a>
        </li>
        <li>
            <a href="{{ path('app_admin_commentaires') }}" class="nav-link text-white {% if route_name == 'app_admin_commentaires' %} active {% endif %} {% if route_name == 'app_admin_commentaires_update' %} active {% endif %}">
            <i class="bi bi-chat icon-logo"></i>
            Commentaires
            </a>
        </li>
        <li>
            <a href="{{ path('app_admin_users') }}" class="nav-link text-white {% if route_name == 'app_admin_users' %} active {% endif %} {% if route_name == 'app_admin_users_update' %} active {% endif %}">
            <i class="bi bi-person-circle icon-logo"></i>
            User
            </a>
        </li>
        </ul>
        <hr>
        <div class="dropdown">
        <a href=" {{ path('app_admin') }} " class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
            <img src="https://pbs.twimg.com/profile_images/1458239281210736644/t1OH5Grw_400x400.jpg" alt="" width="32" height="32" class="rounded-circle me-2">
            <strong>{{app.user.prenom}} {{app.user.nom}}</strong>
        </a>
        <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
            <li><a class="dropdown-item" href=" {{ path('blog_create') }}">Nouvel article</a></li>
            <li><a class="dropdown-item" href="{{ path('app_profil') }}">Profil</a></li>
            <li><hr class="dropdown-divider"></li>
            <li><a class="dropdown-item" href="{{ path('app_logout') }}">Déconnexion</a></li>
            <li><a class="dropdown-item" href="{{ path('blog') }}">Quitter</a></li>
            
        </ul>
        </div>
    </div>

    <div class="p-2" style="width:80%; margin-left:20%;overflow-y: auto;">
    {% block body %}
    
    {% endblock %}
    </div>

    </main>


        
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

        {% block javascript %}
        
        {% endblock %}
    </body>
</html>